{
  "name": "quench-store",
  "version": "0.0.4",
  "description": "Lightweight state management library with support for asynchronous jobs and simple change subscription",
  "main": "./build/lib.js",
  "types": "./build/lib.d.ts",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf build; npm run build:base -- --analyze=verbose; tsc --emitDeclarationOnly",
    "build:base": "esbuild src/lib.ts --bundle --platform=neutral --outdir=build --drop:console --target=es2015 --minify --tree-shaking=true --sourcemap=external --format=esm",
    "build:watch": "npm run build:base -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adv0cat/quench-store.git"
  },
  "keywords": [
    "store",
    "state",
    "state manager",
    "reactive",
    "action"
  ],
  "author": "adv0cat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adv0cat/quench-store/issues"
  },
  "homepage": "https://github.com/adv0cat/quench-store#readme",
  "devDependencies": {
    "esbuild": "0.17.17",
    "typescript": "^5.0.4"
  },
  "files": [
    "./build"
  ]
}
